<div class="flex-grow min-h-0 flex flex-row w-full">
  <div class="w-[25%] h-full flex flex-col gap-1 overflow-auto">
    <%= for _ <- 1..10 do %>
      <.chat_list_item />
    <% end %>
  </div>
  <div class="flex-grow overflow-auto">
    <%= for i <- 1..15 do %>
      <.chat_message_bubble i={i} />
    <% end %>
  </div>
</div>
